<header class="top-bar">
  <div class="left-section">
    <img src="/images/logo.png" class="app-logo" alt="logo" />

    <div class="app-info">
      <h2>GreenMile AI</h2>
      <p>Smart EV Routing</p>
    </div>
  </div>

  <div class="right-section">
    <!-- Notification Bell -->
    <div class="notification">
      <!-- <i>&#128276;</i>
      <span class="badge">3</span> -->
      <i class="fa-solid fa-bell"></i>
    </div>

    <!-- User Profile -->
    <div class="user-profile">
      <div class="user-icon">ðŸ‘¤</div>

      <div class="user-info user-inline">
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } else { %>
          <span class="username"><%= currUser.username %></span>
          <a class="logout-btn" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</header>


<style>
/* ===== TOP BAR BASE ===== */
.top-bar {
    width: 100%;
    padding: 12px 25px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #ffffff;
    border-bottom: 1px solid #e4e4e4;
    font-family: "Segoe UI", sans-serif;

    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.content-area {
    margin-top: 70px;  /* Push content down */
    padding: 25px;
}

/* ===== LEFT SECTION ===== */
.left-section {
  display: flex;
  align-items: center;
  gap: 14px;
}

.app-logo {
  width: 42px;
  height: 42px;
  border-radius: 12px;
  object-fit: cover;
}

.app-info h2 {
  font-size: 20px;
  margin: 0;
  font-weight: 600;
  color: #222;
}

.app-info p {
  margin: 0;
  font-size: 13px;
  color: #6f6f6f;
}

/* ===== RIGHT SECTION ===== */
.right-section {
  display: flex;
  align-items: center;
  gap: 25px;
  margin-right: 2%;
}

/* ===== NOTIFICATION ===== */
.notification {
  position: relative;
  font-size: 22px;
  cursor: pointer;
  padding: 6px;
  border-radius: 50%;
  transition: background 0.1s ease-in-out;
}

.notification:hover {
  background: #f3f3f3;
}

.badge {
  position: absolute;
  top: -5px;
  right: -8px;
  background: #ff3b30;
  color: #fff;
  border-radius: 50%;
  padding: 2px 6px;
  font-size: 11px;
  font-weight: bold;
}

/* ===== USER PROFILE ===== */
.user-profile {
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  padding: 6px 10px;
  border-radius: 10px;
  transition: background 0.1s ease-in-out;
}

.user-profile:hover {
  background: #f4f4f4;
}

.user-icon {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #00bfa5, #0084ff);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}

/* ===== USER INFO INLINE ===== */
.user-inline {
  display: flex;
  align-items: center;
  gap: 12px;
}

.username {
  font-size: 15px;
  font-weight: 600;
  color: #222;
}

.logout-btn {
  font-size: 14px;
  color: #ff3b30;
  text-decoration: none;
}

.logout-btn:hover {
  text-decoration: underline;
}

/* NAV LINKS FOR LOGIN/SIGNUP */
.nav-link {
  color: #0084ff;
  text-decoration: none;
  font-weight: 600;
}

.nav-link:hover {
  text-decoration: underline;
}
</style>
